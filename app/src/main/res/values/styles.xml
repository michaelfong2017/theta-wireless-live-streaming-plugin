<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">26dp</item>
        <item name="android:background">@color/colorAria</item>
        <item name="colorControlActivated">@color/colorBorder</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    </style>

</resources>
